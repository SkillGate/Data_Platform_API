{
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    }
  ],
  "routes": [
    { "src": "/api/", "dest": "main.py" },
    { "src": "/", "dest": "main.py" },
    { "src": "/api/blog/posts", "dest": "main.py" }
  ]
}